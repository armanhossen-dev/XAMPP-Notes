                        </HBox>
                    </StackPane>
                </VBox>

                <VBox fx:id="locationContainer" managed="false" spacing="6.0" visible="false">
                    <Label styleClass="label-secondary" text="Location">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="locationField" prefHeight="48.0" prefWidth="433.0" promptText="Enter your house location" styleClass="text-field" />
                </VBox>
            </VBox>

            <VBox alignment="CENTER" spacing="16.0">
                <Button fx:id="registerButton" onAction="#handleRegistration" prefHeight="48.0" prefWidth="433.0" styleClass="button" text="Register">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>

                <HBox alignment="CENTER" spacing="12.0">
                    <Separator prefWidth="60.0" />
                    <Label styleClass="label-secondary" text="or" />
                    <Separator prefWidth="60.0" />
                </HBox>

                <Button onAction="#switchToLogin" prefHeight="44.0" prefWidth="445.0" styleClass="button-secondary" text="Already have an account? Login now">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </VBox>

            <Region prefHeight="16.0" />
        </VBox>
    </VBox>

    <HBox alignment="CENTER" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
