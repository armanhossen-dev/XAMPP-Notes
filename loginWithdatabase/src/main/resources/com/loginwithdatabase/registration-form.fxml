<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.loginwithdatabase.RegistrationForm">

    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <VBox alignment="CENTER" maxWidth="431.0" minWidth="350.0" prefHeight="650.0" prefWidth="431.0" spacing="20.0" styleClass="vbox-card">

            <VBox alignment="CENTER" spacing="8.0">
                <Label styleClass="label" text="Create an Account">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label styleClass="label-secondary" text="Register to get started">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </VBox>

            <Region prefHeight="8.0" />

            <VBox spacing="18.0" styleClass="spacing-medium">

                <VBox spacing="6.0">
                    <Label styleClass="label-secondary" text="User Type">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <ChoiceBox fx:id="userTypeChoiceBox" prefHeight="48.0" prefWidth="433.0" styleClass="choice-box" />
                </VBox>

                <VBox spacing="6.0">
                    <Label styleClass="label-secondary" text="Full Name">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nameField" prefHeight="48.0" prefWidth="433.0" promptText="Enter your full name" styleClass="text-field" />
                </VBox>

                <VBox spacing="6.0">
                    <Label styleClass="label-secondary" text="Phone Number">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="phoneField" prefHeight="48.0" prefWidth="433.0" promptText="Enter your phone number" styleClass="text-field" />
                </VBox>

                <VBox spacing="6.0">
                    <Label styleClass="label-secondary" text="Username">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" prefHeight="48.0" prefWidth="433.0" promptText="Choose a username" styleClass="text-field" />
                </VBox>

                <VBox spacing="6.0">
                    <Label styleClass="label-secondary" text="Password">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <StackPane prefHeight="48.0">
                        <PasswordField fx:id="passwordField" prefWidth="433.0" promptText="Enter your password" styleClass="password-field" />
                        <TextField fx:id="visiblePasswordField" managed="false" prefWidth="433.0" promptText="Enter your password" styleClass="text-field" visible="false" />
                        <HBox alignment="CENTER_RIGHT" mouseTransparent="true" prefHeight="84.0" prefWidth="400.0" StackPane.alignment="CENTER_RIGHT">
                            <Button fx:id="togglePasswordButton" mouseTransparent="false" onAction="#togglePasswordVisibility" styleClass="button-toggle">
                                <graphic>
                                    <SVGPath fx:id="togglePasswordIcon" content="M12 4.5C7 4.5 2.73 7.61 0 12c2.73 4.39 7 7.5 12 7.5s9.27-3.11 12-7.5c-2.73-4.39-7-7.5-12-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" scaleX="0.8" scaleY="0.8" styleClass="svg-icon" />
